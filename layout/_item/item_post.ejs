<% 
    let post_time= post.updated ? post.updated : post.date; 
%>

<a class="btn btn-dark bg-gradient w-100 p-3 mb-5 text-center shadow-lg" href="<%- url_for(post.path) %>">
    <h3 class="text-white">
        <%= post.title %>
    </h3>
    <p class="text-secondary">
        <%- date(post_time, 'YYYY.MM.DD') %>
    </p>
</a>